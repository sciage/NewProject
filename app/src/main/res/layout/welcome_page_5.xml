<com.redbooth.WelcomePageLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/welcome_page"
    tools:background="@color/page3">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/contact_privacy_policy"
        android:text="Privacy Policy"
        android:layout_alignParentTop="true"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:textStyle="bold"/>

    <TextView
        style="@style/text_subtitle_privacy"
        android:id="@+id/contact_point_01"
        android:gravity="center"
        android:layout_below="@+id/contact_privacy_policy"
        android:text="Permissions and Privacy are your \n your rights. You control them "
        app:view_behavior="in.voiceme.app.voiceme.contactPage.ParallaxSubtitleBehaviour" />
    <TextView
        style="@style/text_subtitle_privacy"
        android:id="@+id/contact_point_02"
        android:layout_below="@+id/contact_point_01"
        android:gravity="center"
        android:text="We take your phone number for \n security reasons. We donot sell \n it to any 3rd party"
        app:view_behavior="in.voiceme.app.voiceme.contactPage.ParallaxSubtitleBehaviour" />
    <TextView
        style="@style/text_subtitle_privacy"
        android:id="@+id/contact_point_03"
        android:layout_below="@+id/contact_point_02"
        android:gravity="center"
        android:text="We are a private network and this app \n is for entertainment purpose only.\n We donot want to hurt anyone"
        app:view_behavior="in.voiceme.app.voiceme.contactPage.ParallaxSubtitleBehaviour" />

    <TextView
        style="@style/text_subtitle_privacy"
        android:id="@+id/contact_point_04"
        android:layout_below="@+id/contact_point_03"
        android:gravity="center"
        android:text="Your 'likes' and 'hugs' are for you \n and your friends. We donot interfere \n with your posts.."
        app:view_behavior="in.voiceme.app.voiceme.contactPage.ParallaxSubtitleBehaviour" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Verified"
        android:textColor="@color/md_green_50"
        android:padding="5dp"
        android:layout_below="@id/contact_point_04"
        android:id="@+id/person_contact_verified"
        android:textSize="25sp"/>

    <com.digits.sdk.android.DigitsAuthButton
        android:id="@+id/auth_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/person_contact_verified"
        android:layout_centerHorizontal="true"
        />


</com.redbooth.WelcomePageLayout>



